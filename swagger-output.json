    "/sign-up": {
      "post": {
        "tags": [
          "Sign-in"
        ],
        "summary": "Register an Account and send a verification email",
        "description": "",
        "parameters": [
          {
            "name": "parameter_name",
            "in": "body",
            "description": "nickName is optional, while all the others are required.",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "test@gmail.com"
                },
                "phone": {
                  "type": "string",
                  "example": "0912345678"
                },
                "firstName": {
                  "type": "string",
                  "example": "Ho"
                },
                "lastName": {
                  "type": "string",
                  "example": "Erik"
                },
                "nickName": {
                  "type": "string",
                  "example": "Erik"
                },
                "password": {
                  "type": "string",
                  "example": "a1234567"
                },
                "confirmPassword": {
                  "type": "string",
                  "example": "a1234567"
                }
              },
              "required": [
                "email",
                "phone",
                "firstName",
                "lastName",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "註冊成功",
            "schema": {
              "$ref": "#/definitions/RegisterEmailSuccess"
